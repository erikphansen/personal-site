{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error"
    ],
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }]
  },
  "overrides": [{
    "files": ["test/**/*test.js"],
    "rules": {
      "no-unused-expressions": 0
    }
  }]
}
